%div#sign-in.row
  %div.col-md-4.col-md-offset-4
    %h2= t('.title')
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      %div.form-group
        = f.text_field :login, placeholder: t('.login'), autofocus: true, class: 'form-control'
      %div.form-group
        = f.password_field :password, placeholder: t('.password'), autocomplete: 'off', class: 'form-control'
      - if devise_mapping.rememberable?
        %div.form-inline
          %div.checkbox
            = f.check_box :remember_me
            = f.label :remember_me
      %div.form-group
        = button_tag t('.submit'), class: 'btn btn-primary'
    = render 'devise/shared/links'
