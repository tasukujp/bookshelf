%div#sign-up.row
  %div.col-md-4.col-md-offset-4
    %h2
      = t('.title')
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      %div.form-group
        = f.text_field :name, placeholder: t('.name'), autofocus: true, class: 'form-control'
      %div.form-group
        = f.email_field :email, placeholder: t('.email'), class: 'form-control'
      %div.form-group
        = f.password_field :password, placeholder: t('.password'), autocomplete: 'off', class: 'form-control'
      %div.form-group
        = f.password_field :password_confirmation, placeholder: t('.password_confirmation'), autocomplete: 'off', class: 'form-control'
      %div.form-group
        = button_tag t('.submit'), class: 'btn btn-primary'
    = render 'devise/shared/links'
