%div#users-show.row
  %div.col-md-6
    %h2 プロフィール
    %div.user-image
      = image_tag 'default_user.png', width: 200, height: 200
    %div.user-info
      %div.row
        %div.col-md-12
          %h3.user-name= @user.name
      %div.row
        %div.col-md-12= @user.email
      .actions
        %div.user-book
          = fa_icon 'book'
          = t('.users_count_html', count: @user.books_count)
        %div.row
          %div.col-md-12
            - if current_user?(@user)
              = link_to t('.edit'), edit_user_registration_path, class: 'btn btn-default'
    %div.row
      %div.col-md-12
        %h2 貸出中
        - @rental_books.each do |book|
          %div.row.rental-item
            %div.col-md-12
              = image_tag book.get_image, width: 100, height: 130
              = form_for(book.user_books.find_by(user_id: current_user.id, return_date: nil), remote: true) do |f|
                = f.submit '返却', class: 'btn btn-info'
  %div.col-md-6
    %h2=t('.rental_history')
    - @user_books.each do |user_book|
      %div.row.book-item
        %div.col-md-12
          %div.book-image
            = link_to user_book.book do
              = image_tag user_book.book.get_image, width: 100, height: 130
          %div.book-info
            %h5.book-title
              = link_to user_book.book.title, user_book.book
            %div.book-author
              = user_book.book.author
            %div.book-publisher
              = user_book.book.publisher
            %div.book-published
              = user_book.book.published
            %div.book-rental-date
              貸出日 :
              = l(user_book.rental_date, format: :date)
      - if @user_books.last != user_book
        %hr
