%header.navbar.navbar-fixed-top.navbar-inverse
  .container
    = link_to 'Bookshelf', root_path, id: 'logo'
    %nav
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li.dropdown
            = link_to '#', class: 'dropdown-toggle', data: { toggle: :dropdown } do
              %span.glyphicon.glyphicon-list
              %b.caret
            %ul.dropdown-menu
              %li= link_to 'アカウント情報', edit_user_registration_path
              %li.divider
              %li= link_to 'ログアウト', destroy_user_session_path, method: 'delete'
        - else
          %li= link_to 'Sign up', new_user_registration_path, class: 'btn btn-default'
          %li= link_to 'Log in', new_user_session_path, class: 'btn btn-info'