.row.book-item
  .col-xs-12
    .book-image
      = link_to book do
        = image_tag book_image_or_default(book.image), width: 100, height: 130
    .book-info
      - if defined?(user_book)
        - if book.rental?(user)
          %span.label.label-info= t('.on_loan')
        - else
          %span.label.label-success= t('.return')
      %h5.book-title
        = link_to book.title, book
      .book-author
        = book.author
      .book-publisher
        = book.publisher
      .book-published
        = book.published
      - if defined?(user_book)
        .book-rental-date
          = t('.rental_date', date: l(user_book.rental_date, format: :date))
