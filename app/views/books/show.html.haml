#books-show
  %div.row
    %div.col-md-6.col-md-offset-3
      %div.book-image
        - if @book.url.present?
          = link_to @book.url, target: '_blank' do
            = image_tag @book.get_image, width: 200, height: 260
        - else
          = image_tag @book.get_image, width: 200, height: 260
      %div.book-content
        %h3.book-title
          - if @book.url.present?
            = link_to @book.title, @book.url, target: '_blank'
          - else
            = @book.title
        %div.row
          %div.col-md-12
            %span.book-author 著者 :
            = @book.author
        %div.row
          %div.col-md-12
            %span.book-publisher 出版社 :
            = @book.publisher
        %div.row
          %div.col-md-12
            %span.book-published 発売日 :
            = @book.published
        %div.row
          %div.col-md-12
            %span.book-isbn ISBN :
            = @book.isbn
        .actions
          - if @book.rental?
            = button_tag t('.submit_disable'), class: 'btn', disabled: true
          - else
            = form_for(@book.user_books.build) do |f|
              = hidden_field_tag :book_id, @book.id
              = f.submit t('.submit'), class: 'btn btn-primary', title: t('.title'),
                data: { confirm: t('.book_rental_confirm', title: @book.title),
                        commit: t('.commit'), cancel: t('.cancel') }
